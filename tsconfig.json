{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": "./",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "paths": {
            "@components/*": [
                "./src/components/*"
            ],
            "@lib/*": [
                "./src/lib/*"
            ],
            "@layout/*": [
                "./src/layout/*"
            ]
        },
        "composite": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
